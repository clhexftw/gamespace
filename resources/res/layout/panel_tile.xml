<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:theme="@style/GameSpaceTheme.Panel.Tile" android:orientation="vertical" android:background="@drawable/tile_background" android:padding="16dp" android:layout_width="120dp" android:layout_height="100dp" android:layout_margin="4dp">
    <ImageView android:id="@+id/tile_icon" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_search" android:tint="?android:attr/textColor"/>
    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
    <TextView android:textSize="13sp" android:ellipsize="marquee" android:id="@+id/tile_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/app_search_title" android:singleLine="true" android:marqueeRepeatLimit="marquee_forever"/>
    <TextView android:textSize="11sp" android:ellipsize="marquee" android:id="@+id/tile_summary" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/app_search_title" android:singleLine="true" android:marqueeRepeatLimit="marquee_forever" android:alpha="0.7"/>
</LinearLayout>
