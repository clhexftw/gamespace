<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="7dp">
    <FrameLayout android:layout_gravity="center_horizontal" android:id="@+id/option_tile" android:background="@drawable/option_border_custom" android:layout_width="100dp" android:layout_height="100dp" android:paddingHorizontal="10dp" android:paddingVertical="10dp">
        <ImageView android:id="@+id/option_thumbnail" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
    <TextView android:textAppearance="@style/OptionTitleTextAppearance" android:gravity="center_horizontal" android:id="@+id/option_label" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
