<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto" android:title="@string/power_usage_summary_title" android:key="power_usage_summary_screen" settings:keywords="@string/keywords_battery">
    <com.android.settingslib.widget.UsageProgressBarPreference android:title="@string/summary_placeholder" android:selectable="true" android:key="battery_header" settings:controller="com.android.settings.fuelgauge.BatteryHeaderPreferenceController"/>
    <com.android.settingslib.widget.LayoutPreference android:layout="@layout/preference_battery_error" android:selectable="false" android:key="battery_help_message" settings:searchable="false"/>
    <com.android.settings.widget.CardPreference android:title="@string/summary_placeholder" android:key="battery_tip" settings:controller="com.android.settings.fuelgauge.batterytip.BatteryTipPreferenceController"/>
    <Preference android:title="@string/advanced_battery_preference_title" android:key="battery_usage_summary" android:fragment="com.android.settings.fuelgauge.batteryusage.PowerUsageAdvanced" settings:keywords="@string/keywords_battery_usage"/>
    <Preference android:title="@string/battery_saver" android:key="battery_saver_summary" android:fragment="com.android.settings.fuelgauge.batterysaver.BatterySaverSettings" settings:controller="com.android.settings.fuelgauge.BatterySaverController" settings:keywords="@string/keywords_battery_saver"/>
    <Preference android:title="@string/smart_battery_manager_title" android:key="smart_battery_manager" android:fragment="com.android.settings.fuelgauge.SmartBatterySettings" settings:controller="com.android.settings.fuelgauge.batterytip.BatteryManagerPreferenceController" settings:keywords="@string/keywords_battery_adaptive_preferences"/>
    <Preference android:title="@string/battery_icon_title" android:key="battery_icon" android:summary="@string/battery_icon_summary" android:fragment="com.android.settings.fuelgauge.BatteryIconSettings"/>
    <Preference android:title="@string/optimized_charge_title" android:key="optimized_charge" android:summary="@string/optimized_charge_summary" android:fragment="com.android.settings.fuelgauge.OptimizedChargeFragment" settings:controller="com.android.settings.fuelgauge.OptimizedChargePreferenceController"/>
    <com.android.settings.fuelgauge.batteryusage.PowerGaugePreference android:title="@string/battery_temperature" android:selectable="false" android:key="battery_temperature"/>
    <com.android.settingslib.widget.FooterPreference android:title="@string/battery_footer_summary" android:selectable="false" android:key="power_usage_footer" settings:searchable="false"/>
    <PreferenceCategory android:title="@string/wireless_charging_category_title" android:key="wireless_charging_category_preference" settings:controller="com.android.settings.fuelgauge.WirelessChargingCategoryPreferenceController">
        <org.nameless.custom.preference.SwitchPreference android:title="@string/wireless_charging_enable_title" android:key="wireless_charging_enable" android:summary="@string/wireless_charging_enable_summary" settings:controller="com.android.settings.fuelgauge.WirelessChargingEnablePreferenceController"/>
        <Preference android:title="@string/wireless_charging_quiet_mode_title" android:key="wireless_charging_quiet_mode" android:summary="@string/wireless_charging_quiet_mode_summary" android:dependency="wireless_charging_enable" android:fragment="com.android.settings.fuelgauge.WirelessChargingQuietModeFragment" settings:controller="com.android.settings.fuelgauge.WirelessChargingQuietModePreferenceController"/>
        <Preference android:title="@string/wireless_reverse_charging_title" android:key="wireless_reverse_charging_enable" android:summary="@string/wireless_reverse_charging_summary" android:fragment="com.android.settings.fuelgauge.WirelessReverseChargingFragment" settings:controller="com.android.settings.fuelgauge.WirelessReverseChargingPreferenceController"/>
    </PreferenceCategory>
</PreferenceScreen>
