<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto" android:title="@string/wifi_hotspot_checkbox_text">
    <com.android.settings.wifi.tether.WifiTetherSsidPreference android:title="@string/wifi_hotspot_name_title" android:key="wifi_tether_network_name" android:summary="@string/summary_placeholder"/>
    <ListPreference android:entries="@array/wifi_tether_security" android:title="@string/wifi_security" android:key="wifi_tether_security" android:summary="@string/summary_placeholder" android:entryValues="@array/wifi_tether_security_values"/>
    <com.android.settings.widget.ValidatedEditTextPreference android:persistent="false" android:title="@string/wifi_hotspot_password_title" android:key="wifi_tether_network_password"/>
    <ListPreference android:entries="@array/wifi_tether_auto_turn_off_entries" android:title="@string/wifi_hotspot_auto_off_title" android:key="wifi_tether_auto_turn_off" android:summary="%s" android:entryValues="@array/wifi_tether_auto_turn_off_values"/>
    <org.nameless.custom.preference.SwitchPreference android:title="@string/wifi_hotspot_maximize_compatibility" android:key="wifi_tether_maximize_compatibility"/>
    <org.nameless.custom.preference.SwitchPreference android:title="@string/wifi_hotspot_hidden_ssid_title" android:key="wifi_tether_hidden_ssid" android:summary="@string/wifi_hotspot_hidden_ssid_summary"/>
    <Preference android:title="@string/wifi_hotspot_client_manager_title" android:key="wifi_tether_client_manager" android:fragment="ink.kscope.settings.wifi.tether.WifiTetherClientManager"/>
</PreferenceScreen>
